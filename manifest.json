{
  "manifest_version": 3,
  "browser_specific_settings": {
    "gecko": {
      "id": "interceptly@saransh27.dev",
      "strict_min_version": "109.0"
    }
  },
  "name": "Interceptly - Request Interceptor",
  "version": "1.0.0",
  "description": "Intercept, modify, and redirect HTTP/HTTPS requests with powerful rules",
  
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "storage",
    "scripting",
    "tabs",
    "webNavigation"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "scripts": ["background/service-worker.js"],
    "persistent": false
  },
  
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Interceptly - Request Interceptor",
    "default_icon": {
      "16": "assets/icon-16.svg",
      "48": "assets/icon-48.svg",
      "128": "assets/icon-128.svg"
    }
  },
  
  "icons": {
    "16": "assets/icon-16.svg",
    "48": "assets/icon-48.svg",
    "128": "assets/icon-128.svg"
  },
  
  "options_page": "src/options/options.html",
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content-script.js"],
      "run_at": "document_start"
    }
  ]
}
